# Voce Environment Variables
# Copy this file to .env.local and fill in your values

# Shelby API Configuration
VITE_SHELBY_API_KEY=your_shelby_api_key_here
VITE_SHELBY_NETWORK=SHELBYNET

# Aptos Account Configuration (for browser uploads)
# Note: In production, users will connect their own wallets
# This is only for development/admin functions
VITE_SHELBY_ACCOUNT_ADDRESS=your_aptos_address_here
VITE_SHELBY_ACCOUNT_PRIVATE_KEY=your_private_key_here

# Aptos Network Configuration
VITE_APTOS_NETWORK=TESTNET

# Application Configuration
VITE_APP_NAME=Voce
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_PRIVATE_KEY_IMPORT=false
VITE_ENABLE_AI_BATTLES=false
VITE_ENABLE_LIVE_STREAMING=true
VITE_ENABLE_SHELBY_INTEGRATION=true

# On-Chain Level System Configuration
# Set to "true" to enable on-chain level tracking using dynamic fields
VITE_ENABLE_ON_CHAIN_LEVELS=false

# Level System Contract Configuration
VITE_LEVEL_SYSTEM_ADDRESS=0x1  # Address of deployed level system Move module
VITE_VOCE_ADMIN_ADDRESS=0x123  # Admin address for level system operations
VITE_ENABLE_ON_CHAIN_REWARDS=true

# Truth Rewards System Configuration
VITE_TRUTH_REWARDS_ADDRESS=0x1  # Address of deployed truth rewards Move module
VITE_ENABLE_TRUTH_REWARDS=true  # Enable truth event rewards system
VITE_STABLE_COIN_ADDRESS=0x1    # Address of stable coin contract

# Secure Voting System Configuration
VITE_SECURE_VOTING_ADDRESS=0x1   # Address of deployed secure voting Move module
VITE_ENABLE_SECURE_VOTING=true   # Enable cryptographically secure voting

# Financial System Configuration
VITE_FINANCIAL_SYSTEM_ADDRESS=0x1 # Address of deployed financial system Move module
VITE_ENABLE_REAL_STAKING=true    # Enable real token staking and rewards
VITE_ENABLE_ON_CHAIN_STATS=true   # Enable on-chain user statistics

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# Development Settings
VITE_DEBUG_MODE=false